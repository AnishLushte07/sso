div(ng-controller='NavJobsController as Job' style='position: relative;')
  .w(style='position: fixed; z-index: 2;')
    .wrapper-xs
      .input-group
        a.input-group-addon.bg-primary(uib-tooltip='Upload New JD' tooltip-placement='right' ui-sref='app.jobs.new')
          i.text-white.fa.fa-upload
        input.form-control.wrapper-xs(type='text' placeholder='Search Position' ng-model='Job.searchText.role' ng-change='Job.job_open_collapse = Job.job_close_collapse = false')
  .w.m-t-xl.nav-job
    .bg-dark.lt.w.m-t-xs(style='position: relative;  overflow-y: scroll; overflow-x: hidden; height: 100%; width: 208px;')
      .m-t-sm

      a: .m-l-xs.h4.text-info-lt(ng-if='Job.job_open' ng-click='Job.job_open_collapse = !Job.job_open_collapse')
        i.fa.fa-plus-square(ng-if='Job.job_open_collapse')
        i.fa.fa-minus-square(ng-if='!Job.job_open_collapse')
        | &nbsp; Open
      ul.m-t-xs.nav(uib-collapse='Job.job_open_collapse')
        li(ng-repeat='job in Job.jobs | filter: Job.searchText | filter: {job_status: "!Closed"}' ng-init='$first ? (Job.job_open = true): null' ui-sref-active='active')
          a.text-ellipsis.m-l-md(ui-sref='app.jobs.manage({jobId: job.id})' uib-tooltip="{{job.role}}" tooltip-placement='right' tooltip-append-to-body='true') {{job.role}}

      .m-t-sm

      a: .m-l-xs.h4.text-danger(ng-if='Job.job_closed' ng-click='Job.job_closed_collapse = !Job.job_closed_collapse')
        i.fa.fa-plus-square(ng-if='Job.job_closed_collapse')
        i.fa.fa-minus-square(ng-if='!Job.job_closed_collapse')
        | &nbsp; Closed
      ul.m-t-xs.nav(uib-collapse='Job.job_closed_collapse')
        li(ng-repeat='job in Job.jobs | filter: Job.searchText | filter: {job_status: "Closed"}' ng-init='$first ? (Job.job_closed = true): null' ui-sref-active='active')
          a.text-ellipsis.m-l-md(ui-sref='app.jobs.manage({jobId: job.id})' uib-tooltip="{{job.role}}" tooltip-placement='right' tooltip-append-to-body='true') {{job.role}}
