doctype html
html(lang='en' ng-app='qui.accounts' ng-controller='AppController as App')
  head
    meta(charset='utf-8')
    title(ng-bind='App.Page.title()') Sign In | QuezX
    base(href='/')
    meta(name='description' content='dashboard, recruiter, client')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')

    // build:css styles/accounts.css
    link(rel='stylesheet' href='/styles/main.css' type='text/css')
    link(rel='stylesheet' href='/bower_components/animate.css/animate.css' type='text/css')
    link(rel='stylesheet' href='/bower_components/source-sans-pro/source-sans-pro.css' type='text/css')
    link(rel='stylesheet' href='/bower_components/angular-bootstrap-calendar/dist/css/angular-bootstrap-calendar.css' type='text/css')
    link(rel='stylesheet' href='/bower_components/font-awesome/css/font-awesome.css' type='text/css')
    link(rel='stylesheet', href='bower_components/angular-chart.js/dist/angular-chart.css' type='text/css')
    // endbuild

  body
    .app#app(
      ui-view
      ng-class="{\
        'app-header-fixed':true,\
        'app-aside-fixed':true,\
        'app-aside-folded':App.app.settings.asideFolded,\
        'app-aside-dock':App.app.settings.asideDock,\
        'container':App.app.settings.container\
      }"
    )


    // build:js scripts/accounts-vendor.js
    script(type='text/javascript' src='/bower_components/angular/angular.js')
    script(type='text/javascript' src='/bower_components/moment/moment.js')
    script(type='text/javascript' src='/bower_components/angular-animate/angular-animate.js')
    script(type='text/javascript' src='/bower_components/angular-bootstrap/ui-bootstrap-tpls.js')
    script(type='text/javascript' src='/bower_components/angular-http-auth/src/http-auth-interceptor.js')
    script(type='text/javascript' src='/bower_components/angular-ui-router/release/angular-ui-router.js')
    // endbuild

    // build:js scripts/accounts.js
    script(type='text/javascript' src='/scripts/core.js')
    script(type='text/javascript' src='/scripts/accounts.js')
    // endbuild

    include ./_core.constant.jade
    include ./ga/_ga.accounts.jade
