div(ng-controller='JobsController as Job' before-bottom='Job.loadJobs()')
      .wrapper-md.bg-light.b-b
        button.btn.btn-primary.btn-addon.pull-right.m-t-n-xs(type='button', tooltip='Create new job Position', ng-click='Job.add()')
          i.fa.fa-plus
          | Add
        h1.m-n.font-thin.h3 Positions
      .col-lg-10.col-lg-offset-1.wrapper-md
        table.table.m-b-none(ng-init="color={'High Priority':'success','Open': 'info', 'Hold': 'warning', 'Closed': 'danger'}")
          thead
            tr
              th Positions
              th(style='width:20%;') Status
              th(style='width:20%;') CVs in Pipeline
          tbody
            tr.bg-white(ng-repeat='job in Job.jobs')
              td.wrapper-md {{job.role}}
              td.wrapper-md(class="text-{{color[job.job_status]}}-dker") {{job.job_status}}
              td.wrapper-md {{job.total_applicants}}
          tfoot
            tr
              td
                button.pull-right.btn.active.m-t-xs(ng-if="Job.ui.loading")
                  i.fa.fa-circle-o-notch.fa-spin
                  strong &nbsp;Loading
                button.pull-right.btn.btn-primary.m-t-xs(ng-if="Job.ui.lazyLoad" ng-click="Job.loadJobs()")
                  i.fa.fa-circle-o-notch
                  strong &nbsp;Load More
              td
              td
